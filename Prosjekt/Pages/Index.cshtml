@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="with=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css">
    <body>
        <section class="header">
            <nav class="nav">
                <a href="homepage.html"><img src="images/logoIgland.png"></a>
                <div class="nav-links" id="navLinks">
                    <i class="fa fa-times" onclick="hideMenu()"></i>
                    <ul>
                        <li><a href="">HJEM</a></li>
                        <li><a href="">OM OSS</a></li>
                        <li><a href="">FAQ</a></li>
                        <li><a href="">KONTAKT OSS</a></li>
                        <li><a href="">LOGG INN</a></li>
                    </ul>
                </div>
                <i class="fa fa-bars" onclick="showMenu()"></i>
            </nav>

            <div class="text-box">
                <h1>Verdenskjent Varemerke</h1>
                <p>
                    IGLAND er et verdenskjent varemerke innen utstyr til landbruk og skogbruk.
                    <br>IGLAND produktene omfatter skogsvinsjer, tømmervogner, utstyr for snørydding,
                    løft og vedlikehold til vei.
                </p>
                <a href="" class="hero-btn">Mer Informasjon</a>
            </div>
        </section>


        <!-----JavaScript for Toggle Menu ----->
        <script>
            var navLinks = document.getElementById("navLinks");

            function showMenu() {
                navLinks.style.right = "0";
            }

            function hideMenu() {
                navLinks.style.right = "-200px";
            }
        </script>

    </body>
</html>
