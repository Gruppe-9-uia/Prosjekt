@@page
@model ErrorModel
@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="CSS/login.css">
    <title>Nøsted & AS</title>

</head>

<body>

    <div class="login-container">
        <h2>Velkommen til Nøsted &</h2>
        <form action="YOUR_SERVER_ENDPOINT" method="post">
            <input type="text" name="username" placeholder="Brukernavn" required class="login-input">
            <input type="password" name="password" placeholder="Passord" required class="login-input">
            <button type="submit" class="login-button">Logg inn</button>
        </form>
    </div>

</body>

</html>
