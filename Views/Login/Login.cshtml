@model LoginModel;
@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <h2>Velkommen til Nøsted &</h2>

    <!--    @Html.ValidationSummary(true, "", new { @class = "text-danger" })  -->

    <form asp-controller="Login" asp-action="LoginFrom" method="post">
        <input type="text" name="Username" placeholder="Brukernavn" required class="login-input" asp-for="Username" >
        <input type="password" name="Password" placeholder="Passord" required class="login-input" asp-for="Password">
        <button type="submit" class="login-button">Logg inn</button>
    </form>
</div>