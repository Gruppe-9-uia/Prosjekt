@model Prosjekt.Models.Equipment.EquimentViewModel;

@{
    ViewBag.Title = "Equipment";
}


@using (Html.BeginForm("AddEquipment", "Equipment", FormMethod.Post, null))
{
    <div class="form-group">
        <label name="Name_str">Navn</label>
        <input type="text" class="form-control" asp-for="Name_str" name="Name_str" required />
    </div>
    <div class="form-group">
        <label name="Availability">Tilgjengelig</label>
        <p>Ja</p>
        <input type="radio" class="form-check-input" asp-for="Availability" name="Availability" value="true" required />
        <p>Nei</p>
        <input type="radio" class="form-check-input" asp-for="Availability" name="Availability" value="False" required />
    </div>
    <button type="submit" class="btn btn-primary">Lagre</button>
}