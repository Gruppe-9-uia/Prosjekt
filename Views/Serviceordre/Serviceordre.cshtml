@model Prosjekt.Models.ServiceOrdre.ServiceOrdreModell;
@{
    ViewData["Title"] = "Serviceordre";
}
<div class="ine-test">
    <form>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="produkttype">Produkttype:</label>
                <input type="text" class="form-control" id="produkttype" placeholder="Type vinsj">
            </div>
            <div class="form-group col-md-6">
                <label for="mottattDato">Motatt dato:</label>
                <input type="date" class="form-control" id="mottattDato">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="årsmodell">Årsmodell:</label>
                <input type="text" class="form-control" id="årsmodell" placeholder="1998">
            </div>
            <div class="form-group col-md-6">
                <label for="serienummer">Serienummer:</label>
                <input type="text" class="form-control" id="serienummer" placeholder="ABC123NZ2">
            </div>
        </div>
        <div class="form-group">
            <label for="navn">Fullt navn:</label>
            <input type="text" class="form-control" id="navn" placeholder="John Doe">
        </div>
        <div class="form-group">
            <label for="adresse">Adresse:</label>
            <input type="text" class="form-control" id="adresse" placeholder="Rådhusgate 12">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="sted">Sted:</label>
                <input type="text" class="form-control" id="sted" placeholder="Sandefjord">
            </div>
            <div class="form-group col-md-6">
                <label for="postnummer">Postnummer:</label>
                <input type="number" class="form-control" id="postnummer" placeholder="3210">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="epost">E-post:</label>
                <input type="email" class="form-control" id="epost" placeholder="E-post">
            </div>
            <div class="form-group col-md-6">
                <label for="mobilnummer">Mobilnummer:</label>
                <input type="tel" class="form-control" id="mobilnummer" placeholder="12345678">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="garanti">Garanti:</label>
                <input type="text" class="form-control" id="garanti" placeholder="Garanti">
            </div>
            <div class="form-group col-md-6">
                <label for="service">Service/rep:</label>
                <input type="text" class="form-control" id="service" placeholder="Service/rep">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="beskrivelse">Hva som er avtalt med kunden:</label>
                <textarea class="form-control" id="beskrivelse" placeholder="..."></textarea>
            </div>
        </div>
            <div class="btn-group">
                <button type="button" class="btn btn-outline-danger">Reset</button>
                <button type="button" class="btn btn-outline-danger">Send inn</button>
            </div>
    </form>
</div>


