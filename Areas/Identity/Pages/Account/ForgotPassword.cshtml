@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Glemt passordet ditt?";
}
<div class="card mx-auto justify-content-center" style="width: 500px; margin-top: 100px; border: solid;">
<h1 style="text-align: center;">@ViewData["Title"]</h1>
<h2 style="text-align: center;">Skriv inn din epost.</h2>

<div class="row d-flex justify-content-center">
    <div class="col-md-10">
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Passord</button>
        </form>
    </div>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
