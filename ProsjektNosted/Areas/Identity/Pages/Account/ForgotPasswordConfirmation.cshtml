@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Glemt passordbekreftelse";
}

<div class="card text-center mx-auto  p-5" style="width: 500px; margin-top: 100px; border: 1px solid rgba(0,0,0,0.5);">
    <div style="text-align: center;"  >
         <img  class="card-img-top" style="border: none; width: 100px; height: 100px; margin-top: 10px; padding-top: 0;" src="~/icons/icons8-send-50.png">
     </div>
    <h1>@ViewData["Title"]</h1>
    <p style="margin-top:10px;">
        Vennligst sjekk e-posten din for å tilbakestille passordet ditt.
    </p>
</div>